<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">


    <TextView
        android:id="@+id/textHWitaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="ćwiczenie"
        app:layout_constraintEnd_toStartOf="@+id/buttonSSWybierzCwiczenie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/buttonSSWybierzCwiczenie"
        android:layout_width="159dp"
        android:layout_height="38dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:text="Wybierz ćwiczenie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textHWitaj"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="304dp"
        android:layout_marginRight="304dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toTopOf="@+id/textHWitaj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSSSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:text="Ilość serii:"
        app:layout_constraintBottom_toTopOf="@+id/editTextSSSerie"
        app:layout_constraintEnd_toStartOf="@+id/textSSPowtorzenia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHWitaj" />

    <EditText
        android:id="@+id/editTextSSSerie"
        android:layout_width="59dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="3"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textSSCzas"
        app:layout_constraintEnd_toStartOf="@+id/editTextSSPowtorzenia"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextSSPowtorzenia"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textSSCiezar"
        app:layout_constraintEnd_toStartOf="@+id/buttonSSDodaj"
        app:layout_constraintStart_toEndOf="@+id/editTextSSSerie"
        app:layout_constraintTop_toBottomOf="@+id/textSSPowtorzenia" />

    <TextView
        android:id="@+id/textSSPowtorzenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Ilość powtórzeń:"
        app:layout_constraintBottom_toTopOf="@+id/editTextSSPowtorzenia"
        app:layout_constraintStart_toEndOf="@+id/textSSSerie"
        app:layout_constraintTop_toBottomOf="@+id/buttonSSWybierzCwiczenie" />

    <TextView
        android:id="@+id/textSSCzas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:text="Czas:"
        app:layout_constraintBottom_toTopOf="@+id/editTextSSCzas"
        app:layout_constraintEnd_toStartOf="@+id/textSSCiezar"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextSSCzas"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="376dp"
        android:ems="10"
        android:hint="00:10:00"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextSSCiezar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textSSCiezar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:text="Ciężar:"
        app:layout_constraintBottom_toTopOf="@+id/editTextSSCiezar"
        app:layout_constraintEnd_toStartOf="@+id/buttonSSDodaj"
        app:layout_constraintStart_toEndOf="@+id/textSSCzas" />

    <EditText
        android:id="@+id/editTextSSCiezar"
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="376dp"
        android:ems="10"
        android:hint="100 kg"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSSDodaj"
        app:layout_constraintStart_toEndOf="@+id/editTextSSCzas" />

    <Button
        android:id="@+id/buttonSSDodaj"
        android:layout_width="117dp"
        android:layout_height="147dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="360dp"
        android:text="Dodaj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSSWybierzCwiczenie" />

</androidx.constraintlayout.widget.ConstraintLayout>